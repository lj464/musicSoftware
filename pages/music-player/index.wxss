/* pages/music-player/index.wxss */
.bgimage,.cover {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}
.cover {
    background-color: rgba(0, 0,0,0.5);
    backdrop-filter: blur(30px);  /* 毛玻璃效果 */

}
.icon {
    width: 30px;
}
.tabar {
    display: flex;
    color: #ccc;
    font-size: 30rpx;
}
.tabar view {
    margin: 0 10rpx;
}
page {
    color: #fff;
}
/* 操作css */
.operation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx 0 30rpx;
  }
  
  .operation .btn {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    padding: 0;
  }
  
  .operation .btn-mode {
    width: 80rpx;
    height: 80rpx;
  }
  
  .operation .btn-pause {
    width: 130rpx;
    height: 130rpx;
  }
  .progress .time {
      display: flex;
      justify-content: space-between;
  }
  .current, .duration{
      font-size: 20rpx;
      margin:0 25rpx;
  }
  /* 歌曲信息 */
.music .info {
    margin: 20rpx 0;
  }
  
  .music .info .title {
    font-size: 48rpx;
    font-weight: 700;
  }
  
  .music .info .singer, .music .info .alias {
    font-size: 26rpx;
    color: #ccc;
    margin: 16rpx 0;
  }
  .music {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 100%;
      height: 100%;
      padding: 30rpx 60rpx;
      box-sizing: border-box;
  }
  .bgm {
      flex: 5;
  }
  .bgm image {
      width: 100%;
      height: 100%;
  }
  .lyric {
      flex: 1;
  }
  .music .lyric {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
  }
  .active {
    color: #fff;
  }
  .songText {
    text-align: center;
    line-height: 30px;
    height: 30px;
  }
  .scrollSontext {
    height: 100%;
  }
  
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.activeSongText {
  color: #26ce8a;
  font-size: 36rpx;
}